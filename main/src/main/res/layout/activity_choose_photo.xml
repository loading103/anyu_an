<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_170">
        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_header_1"
            android:scaleType="centerCrop"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#b3000000"/>


        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:padding="9dp"
            android:layout_marginTop="@dimen/dp_20"
            android:src="@mipmap/btn_back_user"
            android:tint="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_Buttom"
        android:layout_width="match_parent"
        android:layout_below="@+id/ll_top"
        android:background="@color/white"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/ll_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_line_stroke"
            android:layerType="software"
            android:layout_marginTop="@dimen/dp_70"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginRight="@dimen/dp_35" />
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_line"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginRight="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_21"
            android:text="温馨提示：当用户等级达到xx等级后才能使用自定义头像"
            android:textColor="#ffb6b5b5"
            android:textSize="13sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_below="@+id/ll_line"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_60"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recyclerView"
            android:layout_marginTop="@dimen/dp_20"
            android:text="设置成功"
            android:textColor="#ff55b332"
            android:layout_centerInParent="true"
            android:drawableLeft="@mipmap/icon_photo_choose"
            android:drawablePadding="@dimen/dp_10"
            android:visibility="gone"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tv_fail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recyclerView"
            android:layout_marginTop="@dimen/dp_20"
            android:text="设置失败"
            android:textColor="#ffbd322b"
            android:layout_centerInParent="true"
            android:drawableLeft="@mipmap/icon_photo_cancle"
            android:visibility="gone"
            android:drawablePadding="@dimen/dp_10"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recyclerView"
            android:layout_marginTop="@dimen/dp_60"
            android:text="立即使用"
            android:textColor="@color/white"
            android:padding="10dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:enabled="false"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_head_btn"
            android:textSize="14sp" />

    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="@dimen/dp_85"
        android:layout_height="@dimen/dp_85"
        android:src="@mipmap/icon_header_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_130"/>
    <ImageView
        android:id="@+id/iv_change"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:src="@mipmap/icon_photo_change"
        android:layout_toRightOf="@+id/iv_header"
        android:layout_marginTop="@dimen/dp_190"
        android:layout_marginLeft="-30dp"
        android:layout_centerHorizontal="true"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_loading"
        android:visibility="gone"
        android:background="#55000000">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_120"
            app:lottie_loop="true"
            app:lottie_imageAssetsFolder="images/"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>