<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:id="@+id/ll_root"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp">
            <RelativeLayout
                android:id="@+id/ll_back"
                android:layout_width="100dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:src="@mipmap/icon_forget_back"
                    android:scaleType="fitXY" />
            </RelativeLayout>

            <TextView
                android:id="@+id/btn_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册"
                android:layout_alignParentRight="true"
                android:layout_marginRight="24dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:textColor="@color/color_4977FC"
                android:textStyle="bold"
                android:textSize="18sp" />
        </RelativeLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textColor="#ff333333"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="60dp"
            android:textStyle="bold"
            android:textSize="21sp" />
        <TextView
            android:id="@+id/tv_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="密码"
            android:textColor="@color/color_333333"
            android:layout_marginTop="12dp"
            android:visibility="invisible"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="24dp"
            android:background="@null"
            android:maxLength="12"
            android:singleLine="true"
            android:textColorHint="#c4c4c4"
            android:textSize="13sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="24dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/edit_pwd_1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="密码"
                android:background="@null"
                android:inputType="textPassword"
                android:maxLength="18"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textColorHint="#c4c4c4"
                android:textSize="16sp" />
            <LinearLayout
                android:id="@+id/ll_close"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:onClick="loginClick"
                android:layout_marginRight="8dp"
                android:visibility="invisible"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_delete"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@mipmap/login_edit_close"
                    android:layout_gravity="center" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_eye"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:onClick="loginClick"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_eye"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@mipmap/icon_close_see"
                    android:layout_gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#66c4c4c4"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tv_pwd_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="确认密码"
            android:textColor="@color/color_333333"
            android:layout_marginTop="12dp"
            android:visibility="invisible"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="24dp"
            android:background="@null"
            android:maxLength="12"
            android:singleLine="true"
            android:textColorHint="#c4c4c4"
            android:textSize="13sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="24dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_pwd_2"
                android:layout_width="313dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="确认密码"
                android:inputType="textPassword"
                android:maxLength="18"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textColorHint="#c4c4c4"
                android:textSize="16sp" />
            <LinearLayout
                android:id="@+id/ll_close_2"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:onClick="loginClick"
                android:layout_marginRight="8dp"
                android:visibility="invisible"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_delete_2"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@mipmap/login_edit_close"
                    android:layout_gravity="center" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_eye_2"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:onClick="loginClick"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_eye_2"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@mipmap/icon_close_see"
                    android:layout_gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#66c4c4c4"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="8dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="完成"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            android:layout_marginTop="35dp"
            android:enabled="false"
            android:textColor="@color/color_BCBCBC"
            android:background="@drawable/selector_login_blue"
            android:id="@+id/btn_finish" />
    </LinearLayout>

</FrameLayout>