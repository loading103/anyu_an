<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000">
        <com.ksyun.media.player.KSYTextureView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#66000000"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="100dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录"
                android:textSize="23sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:drawableLeft="@mipmap/icon_login_switch"
                android:drawablePadding="5dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/btn_register"
                android:onClick="loginClick"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tip_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_tip_1"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/btn_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:onClick="loginClick"
                android:text="@string/login_tip_2"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="29dp"
            android:layout_marginRight="34dp"
            android:background="@drawable/shape_login_black">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入手机号或账号"
                android:textSize="13sp"
                android:textColorHint="@color/color_AEAEAE"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/edit_phone"
                android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                android:maxLength="12"
                android:singleLine="true"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="34dp"
            android:background="@drawable/shape_login_black">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入密码"
                android:textSize="13sp"
                android:textColorHint="@color/color_AEAEAE"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/edit_pwd"
                android:inputType="textPassword"
                android:maxLength="18"
                android:singleLine="true"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="登录"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_white_corner"
            android:id="@+id/btn_login"
            android:onClick="loginClick"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_forget"
            android:onClick="loginClick"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="在线客服"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:id="@+id/btn_service"
            android:onClick="loginClick"/>
    </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_login_logo"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="45dp"/>
</FrameLayout>