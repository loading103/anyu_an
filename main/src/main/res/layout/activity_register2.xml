<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fl_root">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="66dp"
                android:layout_marginRight="66dp"
                android:src="@mipmap/icon_login_title" />
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_50"
                android:scaleType="fitXY"
                android:src="@mipmap/new_regreat" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_50"
                android:src="@mipmap/login_new6667"
                android:layout_marginTop="@dimen/dp_8"
                android:scaleType="fitXY"
                android:id="@+id/iv_back"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.7"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tip"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="35dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:minWidth="35dp"
                        android:text="账号"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_14" />
                    <EditText
                        android:id="@+id/edit_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="40dp"
                        android:background="@null"
                        android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical|left"
                        android:hint="手机号或（6-12位）账号"
                        android:maxLength="12"
                        android:singleLine="true"
                        android:textColor="#959595"
                        android:textColorHint="@color/color_cccccc"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_E5E5E5"
                    android:layout_marginRight="60dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:minWidth="35dp"
                        android:text="密码"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_14" />
                    <EditText
                        android:id="@+id/edit_pwd_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="40dp"
                        android:background="@null"
                        android:gravity="center_vertical|left"
                        android:hint="请设置密码"
                        android:drawablePadding="10dp"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:maxLength="18"
                        android:textColor="@color/color_666666"
                        android:textColorHint="@color/color_cccccc"
                        android:textSize="@dimen/sp_12" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_E5E5E5"
                    android:layout_marginRight="60dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:minWidth="35dp"
                        android:text="确认"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_14" />
                    <EditText
                        android:id="@+id/edit_pwd_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="60dp"
                        android:background="@null"
                        android:gravity="center_vertical|left"
                        android:hint="请确认密码"
                        android:drawablePadding="10dp"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:maxLength="18"
                        android:textColor="@color/color_666666"
                        android:textColorHint="@color/color_cccccc"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_E5E5E5"
                    android:layout_marginRight="@dimen/dp_60"/>
                <LinearLayout
                    android:id="@+id/ll_yq"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:minWidth="35dp"
                        android:text="邀请码"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_14" />

                    <EditText
                        android:id="@+id/et_yq"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical|left"
                        android:hint="邀请码（选填）"
                        android:maxLength="18"
                        android:singleLine="true"
                        android:textColor="@color/color_666666"
                        android:textColorHint="@color/color_cccccc"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:id="@+id/v_yqm"
                    android:background="@color/color_E5E5E5"
                    android:layout_marginRight="100dp"/>
                <LinearLayout
                    android:id="@+id/ll_pic_code"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:minWidth="35dp"
                        android:text="验证码"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_14" />
                    <EditText
                        android:id="@+id/edit_code"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:background="@null"
                        android:gravity="center_vertical|left"
                        android:hint="@string/reg_tu_code"
                        android:singleLine="true"
                        android:maxLength="18"
                        android:textColor="@color/color_666666"
                        android:textColorHint="@color/color_cccccc"
                        android:textSize="@dimen/sp_12" />

                    <ImageView
                        android:id="@+id/pic_code"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_31"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:scaleType="fitXY" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_phone_code"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:text="验证码"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_14" />
                    <EditText
                        android:id="@+id/et_photo_code"
                        android:layout_width="@dimen/dp_70"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12dp"
                        android:background="@null"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical|left"
                        android:hint="@string/reg_tu_code"
                        android:inputType="textPassword"
                        android:maxLength="18"
                        android:singleLine="true"
                        android:textColor="@color/color_666666"
                        android:textColorHint="@color/color_cccccc"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_photo_code"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_31"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="获取验证码"
                        android:singleLine="true"
                        android:layout_marginLeft="5dp"
                        android:textColor="#0000ff"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:id="@+id/ll_line"
                    android:background="@color/color_E5E5E5"
                    android:layout_marginRight="@dimen/dp_180"/>
            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:id="@+id/btn_service"
            android:orientation="vertical"
            android:onClick="registerClick"
            android:gravity="center_horizontal"
            android:layout_gravity="bottom"
            android:layout_marginLeft="35dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:src="@mipmap/icon_login_service"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客服"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_999797"
                android:includeFontPadding="false"
                android:layout_marginTop="6dp"/>
        </LinearLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="24dp"
        android:onClick="registerClick"
        android:src="@mipmap/icon_regist_right" />
</FrameLayout>