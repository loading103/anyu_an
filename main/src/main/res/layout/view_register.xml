<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/fl_root"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="80dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:paddingTop="23dp"
                    android:drawableRight="@mipmap/icon_login_switch"
                    android:drawablePadding="5dp"
                    android:id="@+id/iv_back"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注册"
                    android:textSize="22sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:paddingTop="22dp"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tip_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="34dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_tip_1"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/btn_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:onClick="loginClick"
                    android:text="@string/login_tip_2"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="29dp"
                android:layout_marginRight="34dp"
                android:background="@drawable/shape_login_black">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账号"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="手机号或（6-12位）账号"
                    android:textSize="13sp"
                    android:imeOptions="actionDone"
                    android:textColorHint="@color/color_AEAEAE"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/edit_phone"
                    android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                    android:maxLength="12"
                    android:singleLine="true"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="34dp"
                android:background="@drawable/shape_login_black">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="密码"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请设置密码"
                    android:textSize="13sp"
                    android:imeOptions="actionDone"
                    android:textColorHint="@color/color_AEAEAE"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/edit_pwd_1"
                    android:inputType="textPassword"
                    android:maxLength="18"
                    android:singleLine="true"/>
                <LinearLayout
                    android:id="@+id/ll_eye"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dp_10"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_eye"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:src="@mipmap/password_no_eye"
                        android:layout_gravity="center" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                android:layout_marginRight="34dp"
                android:background="@drawable/shape_login_black">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确认"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请确认密码"
                    android:textSize="13sp"
                    android:textColorHint="@color/color_AEAEAE"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/edit_pwd_2"
                    android:inputType="textPassword"
                    android:maxLength="18"
                    android:singleLine="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/ll_yq"
                android:orientation="horizontal"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="34dp"
                android:background="@drawable/shape_login_black">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邀请码"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="若无，可不填写"
                    android:textSize="13sp"
                    android:textColorHint="@color/color_AEAEAE"
                    android:textColor="@color/white"
                    android:imeOptions="actionDone"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/et_yq"
                    android:maxLength="18"
                    android:singleLine="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/ll_phone_code"
                android:orientation="horizontal"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="34dp"
                android:background="@drawable/shape_login_black">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="验证码"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="验证码"
                    android:textSize="13sp"
                    android:textColorHint="@color/color_AEAEAE"
                    android:imeOptions="actionDone"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/et_photo_code"
                    android:maxLength="18"
                    android:singleLine="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/tv_photo_code"
                    android:text="获取验证码"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginRight="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/ll_pic_code"
                android:orientation="horizontal"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                android:layout_marginRight="34dp"
                android:background="@drawable/shape_login_black">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="验证码"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="验证码"
                    android:textSize="13sp"
                    android:textColorHint="@color/color_AEAEAE"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/edit_code"
                    android:imeOptions="actionDone"
                    android:maxLength="18"
                    android:singleLine="true"/>

                <ImageView
                    android:id="@+id/pic_code"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_31"
                    android:layout_gravity="center"
                    android:layout_marginRight="15dp"
                    android:scaleType="fitXY" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="注册"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginBottom="@dimen/dp_100"
                android:layout_marginLeft="34dp"
                android:layout_marginRight="34dp"
                android:layout_marginTop="20dp"
                android:enabled="false"
                android:background="@drawable/selector_login"
                android:id="@+id/btn_register"
                android:onClick="registerClick"/>
        </LinearLayout>
    </FrameLayout>
</ScrollView>