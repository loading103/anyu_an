<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:id="@+id/ll_root"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp">
            <RelativeLayout
                android:id="@+id/ll_back"
                android:layout_width="100dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:src="@mipmap/icon_forget_back"
                    android:scaleType="fitXY" />
            </RelativeLayout>

            <TextView
                android:id="@+id/btn_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册"
                android:layout_alignParentRight="true"
                android:layout_marginRight="24dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:textColor="@color/color_4977FC"
                android:textStyle="bold"
                android:textSize="18sp" />
        </RelativeLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入手机号"
            android:textColor="#ff333333"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="60dp"
            android:textStyle="bold"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="手机号"
            android:textColor="@color/color_333333"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="26dp"
            android:visibility="invisible"
            android:layout_marginRight="24dp"
            android:background="@null"
            android:digits="1234567890"
            android:maxLength="11"
            android:inputType="number"
            android:singleLine="true"
            android:textColorHint="#c4c4c4"
            android:textSize="13sp" />
        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="手机号"
            android:textColor="@color/color_333333"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="24dp"
            android:background="@null"
            android:digits="1234567890"
            android:inputType="number"
            android:maxLength="12"
            android:singleLine="true"
            android:textColorHint="#c4c4c4"
            android:textSize="16sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#66c4c4c4"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="验证码"
            android:textColor="@color/color_333333"
            android:layout_marginTop="12dp"
            android:visibility="invisible"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="24dp"
            android:background="@null"
            android:maxLength="12"
            android:singleLine="true"
            android:textColorHint="#c4c4c4"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/ll_phone_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_26"
            android:layout_marginTop="8dp"
            android:layout_marginRight="@dimen/dp_24"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_photo_code"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawablePadding="10dp"
                android:gravity="center_vertical|left"
                android:hint="@string/reg_tu_code"
                android:maxLength="18"
                android:singleLine="true"
                android:textColor="@color/color_666666"
                android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                android:textColorHint="@color/color_cccccc"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_photo_code"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_31"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="获取验证码"
                android:textColor="@color/color_4977FC"
                android:textSize="16dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#66c4c4c4"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="6dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="下一步"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            android:layout_marginTop="35dp"
            android:enabled="false"
            android:textColor="@color/color_BCBCBC"
            android:background="@drawable/selector_login_blue"
            android:id="@+id/btn_new" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="65dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="账号密码找回？"
            android:textColor="@color/color_333333"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/btn_service"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:text="联系客服"
            android:textColor="@color/color_4977FC"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tip_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="当前为手机号找回"
            android:textColor="@color/color_666666"
            android:textSize="12sp" />

    </LinearLayout>
</FrameLayout>