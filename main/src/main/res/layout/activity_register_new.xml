<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fl_root">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <LinearLayout
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp">
<!--                <ImageView-->
<!--                    android:id="@+id/iv_finish"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginLeft="24dp"-->
<!--                    android:src="@mipmap/login_ico_close"-->
<!--                    android:visibility="invisible"-->
<!--                    android:scaleType="fitXY" />-->

<!--                <TextView-->
<!--                    android:id="@+id/iv_back"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_alignParentRight="true"-->
<!--                    android:layout_centerVertical="true"-->
<!--                    android:layout_marginRight="24dp"-->
<!--                    android:gravity="center"-->
<!--                    android:text="登录"-->
<!--                    android:textStyle="bold"-->
<!--                    android:textColor="@color/color_4977FC"-->
<!--                    android:textSize="18sp" />-->
                <RelativeLayout
                    android:id="@+id/rl_finish"
                    android:layout_width="100dp"
                    android:visibility="invisible"
                    android:layout_height="50dp">
                    <ImageView
                        android:id="@+id/iv_finish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:src="@mipmap/login_ico_close"
                        android:scaleType="fitXY" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_register"
                    android:layout_alignParentRight="true"
                    android:layout_width="100dp"
                    android:layout_height="50dp">
                    <TextView
                        android:id="@+id/iv_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="登录"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="24dp"
                        android:textColor="@color/color_4977FC"
                        android:textStyle="bold"
                        android:textSize="18sp" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_yq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_yq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="邀请码"
                    android:textColor="#c4c4c4"
                    android:layout_marginTop="55dp"
                    android:layout_marginLeft="26dp"
                    android:visibility="invisible"
                    android:background="@null"
                    android:singleLine="true"
                    android:textSize="13sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/et_yq"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="邀请码"
                        android:textColor="@color/color_333333"
                        android:layout_marginLeft="26dp"
                        android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                        android:layout_marginRight="24dp"
                        android:background="@null"
                        android:maxLength="12"
                        android:singleLine="true"
                        android:textColorHint="#c4c4c4"
                        android:textSize="16sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="选填"
                        android:textColor="#c4c4c4"
                        android:layout_marginRight="26dp"
                        android:visibility="visible"
                        android:background="@null"
                        android:singleLine="true"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#66c4c4c4"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="手机号/账号"
                android:textColor="#c4c4c4"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="12dp"
                android:visibility="invisible"
                android:background="@null"
                android:singleLine="true"
                android:textSize="13sp" />
            <EditText
                android:id="@+id/edit_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="手机号或(6-12位)账号"
                android:textColor="@color/color_333333"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="24dp"
                android:background="@null"
                android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                android:maxLength="12"
                android:singleLine="true"
                android:textColorHint="#c4c4c4"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#66c4c4c4"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="8dp" />
            <TextView
                android:id="@+id/tv_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="密码"
                android:textColor="@color/color_333333"
                android:layout_marginTop="12dp"
                android:visibility="invisible"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="24dp"
                android:background="@null"
                android:maxLength="12"
                android:singleLine="true"
                android:textColorHint="#c4c4c4"
                android:textSize="13sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="24dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/edit_pwd_1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="请设置密码"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:maxLength="18"
                    android:singleLine="true"
                    android:textColor="@color/color_333333"
                    android:textColorHint="#c4c4c4"
                    android:textSize="16sp" />
                <LinearLayout
                    android:id="@+id/ll_close"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginRight="8dp"
                    android:visibility="invisible"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_delete"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:src="@mipmap/login_edit_close"
                        android:layout_gravity="center" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_eye"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_eye"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:src="@mipmap/icon_close_see"
                        android:layout_gravity="center" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#66c4c4c4"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="8dp" />
            <LinearLayout
                android:id="@+id/ll_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="验证码"
                    android:textColor="@color/color_333333"
                    android:layout_marginTop="12dp"
                    android:visibility="invisible"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="24dp"
                    android:background="@null"
                    android:maxLength="12"
                    android:singleLine="true"
                    android:textColorHint="#c4c4c4"
                    android:textSize="13sp" />
                <LinearLayout
                    android:id="@+id/ll_pic_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="@dimen/dp_26"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/dp_24"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/edit_code"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical|left"
                        android:hint="@string/reg_tu_code"
                        android:singleLine="true"
                        android:maxLength="18"
                        android:textColor="@color/color_666666"
                        android:textColorHint="@color/color_cccccc"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/pic_code"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_31"
                        android:layout_gravity="center"
                        android:src="@color/color_333333"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:scaleType="fitXY" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_phone_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_26"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="@dimen/dp_24"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/et_photo_code"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical|left"
                        android:hint="@string/reg_tu_code"
                        android:maxLength="18"
                        android:singleLine="true"
                        android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                        android:textColor="@color/color_666666"
                        android:textColorHint="@color/color_cccccc"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_photo_code"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_31"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="获取验证码"
                        android:textColor="@color/color_4977FC"
                        android:textSize="16dp" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#66c4c4c4"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>


            <TextView
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="注册"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_marginLeft="34dp"
                android:layout_marginRight="34dp"
                android:layout_marginBottom="100dp"
                android:layout_marginTop="35dp"
                android:enabled="false"
                android:textColor="@color/color_BCBCBC"
                android:background="@drawable/selector_login_blue"
                android:onClick="registerClick" />

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="65dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="登录/注册遇到问题？"
            android:textColor="@color/color_333333"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/btn_service"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:onClick="registerClick"
            android:text="联系客服"
            android:textColor="@color/color_4977FC"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tip_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/login_tip_1"
            android:textColor="@color/color_666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/btn_tip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:onClick="Reg"
            android:text="@string/login_tip_2"
            android:textColor="@color/color_4977FC"
            android:textSize="12sp" />
    </LinearLayout>
</FrameLayout>