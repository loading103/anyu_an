<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_root">
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical"
        android:background="@drawable/im_shape__bg"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:orientation="vertical"
            android:gravity="center">
            <com.yunbao.common.utils.IMRoundAngleImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/ico_simi_bg9" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="私密互动申请表"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4:56"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal"
                    android:drawableLeft="@mipmap/ico_simi_time"
                    android:drawablePadding="10dp"
                    android:textSize="11sp"/>
            </LinearLayout>
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:minHeight="@dimen/dp_150"
            android:id="@+id/recyclerView"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_sum"
            android:text="总人数:100"
            android:gravity="end"
            android:paddingRight="10dp"
            android:textColor="#ff666666"
            android:textSize="10sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="8dp"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_marginBottom="@dimen/dp_15">
            <TextView
                android:id="@+id/tv_refuse"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_41"
                android:textSize="14dp"
                android:text="一键拒绝"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@mipmap/ico_simi_bg8"/>
            <TextView
                android:id="@+id/tv_accept"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_41"
                android:textSize="14dp"
                android:layout_marginLeft="@dimen/dp_18"
                android:text="一键接受"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@mipmap/ico_simi_bg7"/>
        </LinearLayout>


    </LinearLayout>
    <TextView
        android:id="@+id/tv_start"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:textSize="14dp"
        android:layout_marginLeft="@dimen/dp_41"
        android:layout_marginRight="@dimen/dp_41"
        android:layout_marginTop="@dimen/dp_25"
        android:text="开启私密互动"
        android:enabled="false"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/selector_simi_start"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>