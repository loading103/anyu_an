<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_58"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_57"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center"
            android:scaleType="fitXY" />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/color_333333"
            android:text="一只小一只小草莓一只小草莓一只小草莓草莓"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:maxLines="1"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="5dp"/>

        <RelativeLayout
            android:layout_width="@dimen/dp_105"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rl_contain"
                android:layout_width="@dimen/dp_96"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_accept"
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_30"
                    android:text="接受"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/ico_simi_bg2"/>
                <TextView
                    android:id="@+id/tv_refuse"
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_30"
                    android:text="拒绝"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/ico_simi_bg3"
                    android:layout_toLeftOf="@+id/tv_open"
                    android:layout_marginRight="6dp"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_refused"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:text="已拒绝"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:visibility="gone"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:background="@mipmap/ico_simi_bg4"
                android:layout_toLeftOf="@+id/tv_open"
                android:layout_marginRight="6dp"/>
            <TextView
                android:id="@+id/tv_accepted"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:text="已接受"
                android:textSize="13sp"
                android:visibility="gone"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:background="@mipmap/ico_simi_bg1"
                android:layout_toLeftOf="@+id/tv_open"
                android:layout_marginRight="6dp"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_E5E5E5"/>
</LinearLayout>